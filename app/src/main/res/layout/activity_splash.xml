<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D03C">





    <TextView
        android:id="@+id/splash_tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_tagline"
        android:textSize="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="false"
        android:textColor="#1A970B"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_centerInParent="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/splash_text"
        android:id="@+id/splash_text"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/splash_tagline"
        android:layout_marginLeft="50dp" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/splash"
        android:id="@+id/splash"
        android:layout_alignParentStart="true"
        android:layout_above="@id/splash_text"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp" />







</RelativeLayout>